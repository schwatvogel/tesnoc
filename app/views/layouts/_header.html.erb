<div id="header" class="round">
	<%= link_to logo ,root_path %>
  	<ul class="navigation round">
    		<li><%= link_to t("header.home"), root_path %></li>
		<% if signed_in? %>

			<li><%= link_to t("header.tac"), tac_path %></li>
			<li><%= link_to t("header.monitor"), monitor_path %></li>
			<li><%= link_to t("header.settings"), edit_user_path(current_user) %></li>
			<li><%= link_to t("header.signout"), signout_path %></li>
			<li><%= link_to t("header.profile"), current_user %></li>
			<%if current_user.admin? %>
				<li><%= link_to t("header.users"), users_path %></li>
			<%end%>
		<% else %>
			<li><%= link_to t("header.signin"), signin_path %></li>
		<% end %>
		<%if params[:locale] =='en' %>
			<li> <%=t("footer.chlang")%><%=  link_to "pirate", request.path+"?locale=pirate" %></li>
		<%elsif params[:locale] =='pirate' %>
			<li><%=t("footer.chlang")%><%= link_to "deutsch", request.path+"?locale=de" %></li>
		<%else%>
			<li><%=t("footer.chlang")%><%= link_to "english", request.path+"?locale=en" %></li>
		<%end%>




  	</ul>
</div>

